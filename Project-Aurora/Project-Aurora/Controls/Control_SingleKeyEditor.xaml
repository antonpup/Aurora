<UserControl x:Class="Aurora.Controls.Control_SingleKeyEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Controls"
             mc:Ignorable="d">
    <DockPanel>
        <Button x:Name="assignButton" Content="Assign" DockPanel.Dock="Right" Width="100" Padding="8,2" Click="AssignButton_Click" />
        <TextBox Text="{Binding SelectedKey, Mode=OneWay}" IsEnabled="False" Margin="0,0,8,0" />
    </DockPanel>
</UserControl>
