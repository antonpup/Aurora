<UserControl x:Class="Aurora.Controls.Control_VariableItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="35.935" d:DesignWidth="280.399">
    <Grid>
        <DockPanel LastChildFill="True">
            <TextBlock x:Name="txtBlk_name" TextWrapping="Wrap" Text="Variable:" VerticalAlignment="Top" DockPanel.Dock="Left"/>
            <TextBlock x:Name="txtBlk_remark" TextWrapping="Wrap" Text="A Clever Remark" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" FontStyle="Italic"/>
            <Button x:Name="btn_reset" Content="Reset" DockPanel.Dock="Right" Click="btn_reset_Click" VerticalAlignment="Top" />
            <Grid x:Name="grd_control" VerticalAlignment="Stretch" Margin="5,0" />
        </DockPanel>
    </Grid>
</UserControl>
