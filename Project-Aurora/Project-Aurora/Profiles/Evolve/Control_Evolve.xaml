<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Class="Aurora.Profiles.Evolve.Control_Evolve"
             mc:Ignorable="d" 
             d:DesignHeight="300" Height="Auto" Width="Auto" d:DesignWidth="850" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">

    <Grid>
        <TabControl>
            <TabItem Header="Overview for Evolve Stage 2">
                <Grid>
                    <TextBlock Margin="10,30,0,0" VerticalAlignment="Top" TextWrapping="Wrap" HorizontalAlignment="Left" Width="824"><Run Text="In order for Evolve Stage 2 support to work, you have to apply the Aurora Wrapper Patch for Logitech in order for Aurora to receive lighting information. Press the &quot;Patch Logitech LED SDK&quot; button to begin the patching process. If you're on Windows Vista and later, you will be asked for Administrator permissions. "/><Run Text="This should not trigger any anti-cheat, but it should be used at your own risk. "/><Run Text="P.S. This patch applies to ALL Logitech LED supported games, Aurora will work with all Logitech LED supported games."/></TextBlock>
                    <Button x:Name="patch_button" Content="Patch Logitech LED SDK" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Click="patch_button_Click"/>
                    <CheckBox x:Name="game_enabled" Content="Enable Aurora to provide lighting effects with Evolve Stage 2" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Checked="game_enabled_Checked" Unchecked="game_enabled_Checked"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
