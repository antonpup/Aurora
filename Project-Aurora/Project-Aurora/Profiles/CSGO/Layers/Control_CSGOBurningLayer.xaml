<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Profiles.CSGO.Layers"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:Controls="clr-namespace:Aurora.Controls" x:Class="Aurora.Profiles.CSGO.Layers.Control_CSGOBurningLayer"
             mc:Ignorable="d" Loaded="UserControl_Loaded">
    <Grid>
        <xctk:ColorPicker x:Name="ColorPicker_Burning" Margin="81,0,0,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="163" UsingAlphaChannel="True" ColorMode="ColorCanvas" SelectedColorChanged="ColorPicker_Burning_SelectedColorChanged" />
        <Label HorizontalAlignment="Left" Padding="0" Content="Burning Color:" VerticalAlignment="Top" Margin="0,2,0,0"/>
        <CheckBox x:Name="checkBox_Animated" Content="Animate the burning effect" HorizontalAlignment="Left" Margin="0,23,0,-13" VerticalAlignment="Top" Checked="checkBox_Animated_Checked" Unchecked="checkBox_Animated_Checked"/>
    </Grid>
</UserControl>