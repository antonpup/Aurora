<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             x:Class="Aurora.Settings.Layers.Control_SolidFillLayer"
             mc:Ignorable="d">
    <Grid>
        <TextBlock Text="Color:" Margin="0,4,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <xctk:ColorPicker SelectedColor="{Binding Properties._PrimaryColor, Converter={StaticResource DrawingToMediaColorConv}}" ColorMode="ColorCanvas" UsingAlphaChannel="True" Margin="36,0,0,0" Height="24" Width="139" HorizontalAlignment="Left" VerticalAlignment="Top" />
    </Grid>
</UserControl>
