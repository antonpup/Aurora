<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Settings.Layers"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:Controls="clr-namespace:Aurora.Controls" x:Class="Aurora.Settings.Layers.Control_ImageLayer"
             mc:Ignorable="d" Loaded="UserControl_Loaded">
    <Grid>
        <Controls:KeySequence x:Name="KeySequence_keys" Margin="0,29,0,0" HorizontalAlignment="Left" Width="230" RecordingTag="SolidColorLayer" Title="Affected Keys" SequenceUpdated="KeySequence_keys_SequenceUpdated"/>
        <Button x:Name="btn_SelectImage" Content="Select Image" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btn_SelectImage_Click" Margin="205,0,-25,0"/>
        <TextBlock x:Name="txtBlk_seletedImage" HorizontalAlignment="Left" Margin="0,3,0,0" TextWrapping="Wrap" Text="Selected Image: None" VerticalAlignment="Top" Width="200"/>
    </Grid>
</UserControl>
