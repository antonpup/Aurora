<local:KeycapViewer x:Class="Aurora.Settings.DeviceLayoutViewer.Keycaps.Control_GhostKeycap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Settings.DeviceLayoutViewer.Keycaps"
             mc:Ignorable="d">
    <Grid>
        <Border x:Name="keyBorder" BorderBrush="White" BorderThickness="1" CornerRadius="5" Background="#00000000" MouseDown="keyBorder_MouseDown" MouseMove="keyBorder_MouseMove" MouseLeave="keyBorder_MouseLeave" MouseEnter="keyBorder_MouseEnter">
            <TextBlock x:Name="keyCap" TextWrapping="Wrap" Text="Key" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Calibri" TextAlignment="Center" Foreground="White" Visibility="Hidden"/>
        </Border>
    </Grid>
</local:KeycapViewer>
