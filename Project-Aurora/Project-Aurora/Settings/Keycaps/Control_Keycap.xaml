<UserControl x:Class="Aurora.Settings.DeviceLayoutViewer.Control_Keycap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Settings.DeviceLayoutViewer"
             mc:Ignorable="d"
             Name="keycapControl"
             Height="{Binding Path=Config.Height, Mode=OneWay}" Width="{Binding Path=Config.Width}"
             d:DesignHeight="30" d:DesignWidth="30" HorizontalAlignment="Left" VerticalAlignment="Top">
    <ContentControl x:Name="keycap" Content="{Binding Keycap}"/>
</UserControl>