<UserControl x:Class="Aurora.Settings.Overrides.Logic.Control_TimeAndUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:l="clr-namespace:Aurora.Settings.Overrides.Logic"
             xmlns:u="clr-namespace:Aurora.Utils"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <xctk:DoubleUpDown MinWidth="60" Value="{Binding Time}" Minimum="0" />
        <ComboBox x:Name="UnitCombo" SelectedValue="{Binding Unit}" DisplayMemberPath="Key" SelectedValuePath="Value" Margin="6,0,0,0" />
    </StackPanel>
</UserControl>
